{
  "name": "@yfedoseev/meta-oxide-wasm",
  "version": "0.1.1",
  "description": "WebAssembly bindings for MetaOxide - Universal metadata extraction library",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/",
    "pkg/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg && tsc",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler",
    "build:all": "npm run build && npm run build:nodejs && npm run build:bundler",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit && eslint lib/**/*.ts",
    "format": "prettier --write 'lib/**/*.{ts,js}' 'examples/**/*.{ts,js}' 'tests/**/*.ts'",
    "prepublishOnly": "echo 'Note: WASM builds require Rust toolchain with wasm32 target. See README.md for build instructions.'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yfedoseev/meta-oxide.git",
    "directory": "bindings/wasm"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "metadata",
    "html",
    "parser",
    "opengraph",
    "twitter-card",
    "json-ld",
    "microdata",
    "microformats",
    "rdfa",
    "dublin-core",
    "edge",
    "cloudflare",
    "vercel"
  ],
  "author": "Yury Fedoseev <yfedoseev@gmail.com>",
  "license": "MIT OR Apache-2.0",
  "bugs": {
    "url": "https://github.com/yfedoseev/meta-oxide/issues"
  },
  "homepage": "https://github.com/yfedoseev/meta-oxide/tree/main/bindings/wasm#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "wasm-pack": "^0.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "browser": "./lib/index.js",
  "sideEffects": false
}
